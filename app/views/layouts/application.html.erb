		<!-- register -->
		<div class="bar-section d-flex align-items-center justify-content-end">
			<div>
				<!-- login 전 -->
				<!--<a href="/login" class="register login">로그인</a>-->
				<!--<a href="/join" class="register join">회원가입</a>-->
