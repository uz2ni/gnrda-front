</nav>
<!-- /nav sidebar  -->
<!-- nav topbar -->
<div class="navbar navbar-default fixed-top d-block p-0">
	<div class="navbar-inner d-flex justify-content-between align-items-center">
	  <!-- logo (left) -->
		<a href="/" class="pl-2 pl-md-3 logo-section">
			<img class="logo" src="/img/gnrda_mini_logo.png" alt="Logo" width="50" height="50" />
		</a>
		<!-- top nav button (center) -->
		<div class="nav-top nav-section">
		  <ul class="nav-top-list d-flex justify-content-center main-font">
		    <li class="nav-top-list-item mx-2 mx-md-3 d-flex align-items-center"><a href="/trending">추천글</a></li>
		    <li class="nav-top-list-item mx-2 mx-md-3 d-flex align-items-center"><a href="/hot">인기글</a></li>
