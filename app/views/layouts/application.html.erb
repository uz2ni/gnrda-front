				<div class="d-flex align-items-center">
					<a href="#" class="register-before bar-profile">
						<img src="http://chittagongit.com//images/my-profile-icon-png/my-profile-icon-png-2.jpg" width="30" height="30">
					</a>
					<a href="/create" class="register-before create-icon">
						<i class="far fa-edit"></i>
					</a>
				</div>
			</div>
			
			<!-- sidebar button (right)  -->
			<a href="#" id="nav-expander" class="nav-expander my-0 mx-4">
				<i class="fas fa-bars ml-1"></i>
			</a>
		</div>
		
	</div>
</div>
<!--/nav topbar  -->
<!-- /nav layout -->
<div class="container-fluid page-wrap">
<%= yield %>
</div>

<!-- navigation bar js -->
<script type="text/javascript">
    /*
     * Show or hide offsite navigation.
     *
     */
    $('#nav-expander').on('click', function(e) {
    	e.preventDefault();
    	$('.main-nav').toggleClass('nav-expanded');
    });
    $('.main-nav .close').on('click', function(e) {
    	e.preventDefault();
    	$('.main-nav').toggleClass('nav-expanded');
    });
</script>
<!-- /navigation bar js -->
</body>
</html>
